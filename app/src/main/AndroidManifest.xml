<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sheraz.app.googleclassroom">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoogleClassroom">
        <activity android:name=".classroom.activities.CreatedClassInfoActivity"></activity>
        <activity android:name=".classroom.activities.JoinedClasses" />
        <activity android:name=".classroom.activities.ClassChatActivity" />
        <activity android:name=".classroom.activities.CreatedClasses" />
        <activity android:name=".classroom.activities.JoinClass" />
        <activity android:name=".classroom.activities.CreateClass" />
        <activity android:name=".MainActivity" />
        <activity android:name=".chat.ChatActivity" />
        <activity android:name=".classroom.activities.SetupProfile" />
        <activity android:name=".classroom.activities.VerifyOTPActivity" />
        <activity android:name=".classroom.activities.PhoneAuthenticationActivity" />
        <activity android:name=".classroom.activities.CreateOrJoinActivity" />
        <activity android:name=".classroom.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>