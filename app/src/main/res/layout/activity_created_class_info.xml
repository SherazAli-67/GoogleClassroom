<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".classroom.activities.CreatedClassInfoActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/classInfo_classImg"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_launcher_background"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/classInfo_classTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Movies"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Info"
        android:textColor="@color/app_color"
        android:fontFamily="@font/roboto_bold"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"></TextView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Title"
                android:padding="4dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/app_color"></TextView>

            <TextView
                android:id="@+id/classInfo_classTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Java Programming Language"
                android:padding="4dp"
                android:fontFamily="@font/roboto_medium"></TextView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Teacher"
                android:padding="4dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/app_color"></TextView>

            <TextView
                android:id="@+id/classInfo_classTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ma'm Mariam Javed"
                android:padding="4dp"
                android:fontFamily="@font/roboto_medium"></TextView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Code"
                android:padding="4dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/app_color"></TextView>

            <TextView
                android:id="@+id/classInfo_classCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OWBS8v"
                android:padding="4dp"
                android:fontFamily="@font/roboto_medium"></TextView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:padding="10dp"
        android:background="@drawable/button_drawable"
        android:text="Open Class Chat"
        android:id="@+id/classInfo_chatActivityBtn"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"></TextView>
</LinearLayout>