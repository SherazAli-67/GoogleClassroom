<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/classes_drawable"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sentBy"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:padding="4dp"
            android:text="Sheraz Ali"></TextView>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/gallery"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:id="@+id/chatLayout_img">
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/groupChatTextMessage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="4dp"
                android:layout_toStartOf="@+id/sentMessageTime"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:text="Hey Sheraz, How are you. How it is going"
                android:textColor="@color/black"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sentMessageTime"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/linearLayout"
                android:textStyle="bold"
                android:padding="4dp"
                android:text="4:13 pm"></TextView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>